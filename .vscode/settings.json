{
    // Automatically format using Black on save.
    "editor.formatOnSave": true,
    // Draw a ruler at Black's column width.
    "editor.rulers": [
        88,
    ],
    // Hide non-code files.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/venv": true,
        "**/.ruff_cache": true,
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "debug.focusWindowOnBreak": false,
}